<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">


    <TextView
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:lineHeight="6dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/article_user"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:lineHeight="6dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toLeftOf="@+id/article_time"
        app:layout_constraintTop_toBottomOf="@+id/article_title"/>

    <TextView
        android:id="@+id/article_time"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:lineHeight="6dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/article_user"
        app:layout_constraintBottom_toBottomOf="@id/article_user"
        app:layout_constraintLeft_toRightOf="@+id/article_user"

        />



</androidx.constraintlayout.widget.ConstraintLayout>